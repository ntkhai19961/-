<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ellen_baker"
    tools:context="com.example.win7.apphoctiengnhat.Login.LoginActivity">

    <LinearLayout
        android:background="#B3000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitleLogin"
            android:textAlignment="center"
            android:textSize="45sp"
            android:textColor="@color/colorWhite"
            android:text="@string/title_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/slogan"
            android:id="@+id/txtSlogan"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <info.hoang8f.widget.FButton
            android:backgroundTint="@color/btnSignUp"
            android:id="@+id/btnSignUp"
            android:text="Sign Up"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textColor="@color/colorWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <info.hoang8f.widget.FButton
            android:backgroundTint="@color/btnSignActive"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnSignIn_LoginActitivy"
            android:text="Sign In"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
