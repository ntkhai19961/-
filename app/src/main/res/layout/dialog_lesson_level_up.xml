<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:text="Level Up"
            android:textSize="@dimen/fontSize_20"
            android:textStyle="bold"
            android:textColor="@color/colorOrange"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Your current level"
                android:textSize="@dimen/fontSize_16"
                android:textColor="@color/black"
                android:background="@color/colorLightBlue"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtCurrentLevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="From: "
                    android:textColor="@color/text_gray_dark"
                    android:textAlignment="center"
                    android:textSize="@dimen/fontSize_18"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtNextLevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="To: "
                    android:textColor="@color/text_gray_dark"
                    android:textAlignment="center"
                    android:textSize="@dimen/fontSize_18"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Unlock new lesson"
                android:textSize="@dimen/fontSize_16"
                android:textColor="@color/black"
                android:background="@color/colorLightBlue"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtCurrentUnlockLesson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="From: "
                    android:textColor="@color/text_gray_dark"
                    android:textAlignment="center"
                    android:textSize="@dimen/fontSize_18"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtNextUnlockLesson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="To: "
                    android:textColor="@color/text_gray_dark"
                    android:textAlignment="center"
                    android:textSize="@dimen/fontSize_18"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnLessonLevelUpOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_20"
            android:background="@color/colorOrange"/>

    </LinearLayout>

</RelativeLayout>