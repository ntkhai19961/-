<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="2"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a4899"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:background="@drawable/background_shrine"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/imageViewFirstPersonAvatar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/imageViewSecondPersonAvatar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:weightSum="3"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtFirstPerson"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/txtSecondPerson"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/glass_back_ground"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <com.example.win7.apphoctiengnhat.LessonDetails.Fragment.HoiThoai.Model.Typewriter
                android:id="@+id/typeWriter_LessonDetails_HoiThoai_Conversation"
                android:layout_margin="15dp"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_margin="15dp"
                android:id="@+id/btnLessonDetails_HoiThoai_Conversation_Hisotry"
                android:background="@drawable/ic_mode_comment_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnLessonDetails_HoiThoai_Conversation_Reset"
                android:layout_toRightOf="@+id/btnLessonDetails_HoiThoai_Conversation_Hisotry"
                android:layout_margin="15dp"
                android:background="@drawable/ic_refresh_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnLessonDetails_HoiThoai_Conversation_Sound"
                android:layout_toRightOf="@+id/btnLessonDetails_HoiThoai_Conversation_Reset"
                android:layout_margin="15dp"
                android:background="@drawable/ic_keyboard_voice_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:layout_margin="15dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnLessonDetails_HoiThoai_Conversation_Next"
                android:background="@drawable/ic_arrow_forward_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>