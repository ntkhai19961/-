<?xml version="1" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_lesson_details_vocabulary_card"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/colorPrimaryBackground"
    android:minHeight="76dp"
    android:minWidth="280dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="74dp"
        android:minWidth="280dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/item_vocabulary_srs_level"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/oval_disabled" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_vocabulary_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:maxEms="5"
                android:maxLines="1"
                android:text="大した"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/item_vocabulary_reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxEms="7"
                    android:maxLines="1"
                    android:text="たいした"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_vocabulary_meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:fontFamily="sans-serif-light"
                    android:maxEms="7"
                    android:maxLines="1"
                    android:text="Considerable"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_vocabulary_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorLightBrown"
        android:visibility="visible"/>
</FrameLayout>