<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ellen_baker"
    tools:context="com.example.win7.apphoctiengnhat.Login.SignIn.SignInActivity">

    <LinearLayout
        android:background="#B3000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/AVLoadingIndicatorView_SignInActivity"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallSpinFadeLoaderIndicator"
        style="@style/AVLoadingIndicatorView.Large"
        android:visibility="invisible"
        app:indicatorColor="@color/lightorange"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtEmail_SignInActivity"
            android:hint="Username"
            android:textColorHint="@color/colorWhite"
            android:text="ntkhai19961@gmail.com"
            android:textColor="@color/colorWhite"
            android:textSize="34sp"
            android:inputType="textPersonName"
            app:met_baseColor="@color/colorWhite"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="30"
            app:met_primaryColor="@color/colorWhite"
            app:met_singleLineEllipsis="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_minCharacters="6"
            android:id="@+id/edtPassword_SignInActivity"
            android:hint="Password"
            android:textColorHint="@color/colorWhite"
            android:text="1234"
            android:textColor="@color/colorWhite"
            android:textSize="34sp"
            android:inputType="textPassword"
            app:met_baseColor="@color/colorWhite"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="15"
            app:met_primaryColor="@color/colorWhite"
            app:met_singleLineEllipsis="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/btnSignIn_SignInActitivy"
        android:text="Sign In"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:shadowColor="@color/black"
        android:backgroundTint="@color/btnSignActive"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
